{
  "name": "salesforce-log-viewer",
  "displayName": "Salesforce Log Viewer",
  "description": "View and manage Salesforce developer logs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:salesforceLogsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Salesforce Log Viewer",
      "properties": {
        "salesforceLogViewer.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh logs at the configured interval"
        },
        "salesforceLogViewer.refreshInterval": {
          "type": "number",
          "minimum": 1000,
          "default": 5000,
          "description": "Interval in milliseconds between automatic log refreshes (minimum 1000ms)"
        },
        "salesforceLogViewer.currentUserOnly": {
          "type": "boolean",
          "default": true,
          "description": "Show logs only for the current user"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "salesforce-log-viewer",
          "title": "Salesforce Logs",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "salesforce-log-viewer": [
        {
          "type": "webview",
          "id": "salesforceLogsView",
          "name": "Salesforce Logs",
          "contextualTitle": "Salesforce Logs"
        }
      ]
    },
    "commands": [
      {
        "command": "salesforce-log-viewer.refreshLogs",
        "title": "Refresh Logs",
        "icon": "$(refresh)"
      },
      {
        "command": "salesforce-log-viewer.openLog",
        "title": "Open Log",
        "icon": "$(file)"
      },
      {
        "command": "salesforce-log-viewer.toggleCurrentUserOnly",
        "title": "Toggle Current User Only",
        "icon": "$(person)"
      },
      {
        "command": "salesforce-log-viewer.deleteAllLogs",
        "title": "Delete All Logs",
        "icon": "$(trash)"
      },
      {
        "command": "salesforce-log-viewer.toggleAutoRefresh",
        "title": "Toggle Auto Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "salesforce-log-viewer.showOptions",
        "title": "Show Options",
        "icon": "$(gear)"
      },
      {
        "command": "salesforce-log-viewer.showSearchBox",
        "title": "Search Logs",
        "icon": "$(search)"
      },
      {
        "command": "salesforce-log-viewer.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "salesforce-log-viewer.showSearchBox",
          "when": "view == salesforceLogsView",
          "group": "navigation@1"
        },
        {
          "command": "salesforce-log-viewer.refreshLogs",
          "when": "view == salesforceLogsView",
          "group": "navigation@2"
        },
        {
          "command": "salesforce-log-viewer.toggleCurrentUserOnly",
          "when": "view == salesforceLogsView",
          "group": "navigation@3"
        },
        {
          "command": "salesforce-log-viewer.toggleAutoRefresh",
          "when": "view == salesforceLogsView",
          "group": "navigation@4"
        },
        {
          "command": "salesforce-log-viewer.deleteAllLogs",
          "when": "view == salesforceLogsView",
          "group": "navigation@5"
        },
        {
          "command": "salesforce-log-viewer.showOptions",
          "when": "view == salesforceLogsView",
          "group": "navigation@6"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "jsforce": "^1.11.0",
    "@salesforce/core": "^3.36.0",
    "luxon": "^3.3.0",
    "fs-extra": "^11.2.0"
  }
}
